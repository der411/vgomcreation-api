{
  "kind": "collectionType",
  "collectionName": "projets",
  "info": {
    "singularName": "projet",
    "pluralName": "projets",
    "displayName": "Projets",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "titre": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "richtext",
      "required": true
    },
    "url_projet": {
      "type": "string",
      "unique": true
    },
    "image": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "vendable": {
      "type": "boolean",
      "default": false,
      "required": true
    },
    "price": {
      "type": "decimal",
      "default": 0,
      "required": false
    },
    "priceId": {
      "type": "string",
      "required": false,
      "unique": true
    },
    "sold": {
      "type": "boolean",
      "default": false
    },
    "dateSold": {
      "type": "datetime",
      "required": false
    },
    "receiptUrl": {
      "type": "string",
      "required": false
    },
    "buyer_email": {
      "type": "email",
      "required": false,
      "private": true
    },
    "buyer_name": {
      "type": "string",
      "required": false,
      "private": true
    },
    "payment_status": {
      "type": "enumeration",
      "enum": [
        "pending",
        "completed",
        "failed",
        "refunded"
      ],
      "default": "pending"
    },
    "transaction_id": {
      "type": "string",
      "unique": true,
      "required": false
    },
    "purchase_metadata": {
      "type": "json",
      "required": false,
      "private": true
    }
  }
}